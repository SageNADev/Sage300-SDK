    /// <typeparam name="T"><#=modelName#></typeparam>
    public class <#=entityName#>Repository<T> : BaseReportRepository<T>, I<#=entityName#>Entity<T>
        where T : <#=modelName#>, new()
    {
        #region Variables

        /// <summary>
        /// Business Entity
        /// </summary>
        private IBusinessEntity _businessEntity;

