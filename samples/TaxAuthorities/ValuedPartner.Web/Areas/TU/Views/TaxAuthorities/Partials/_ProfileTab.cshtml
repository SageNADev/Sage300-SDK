@model ValuedPartner.Web.Areas.TU.Models.TaxAuthoritiesViewModel<ValuedPartner.TU.Models.TaxAuthorities>
@using TaxAuthoritiesResx = ValuedPartner.TU.Resources.Forms.TaxAuthoritiesResx

@using Sage.CA.SBS.ERP.Sage300.Common.Web.AreaConstants
@using Sage.CA.SBS.ERP.Sage300.Common.Resources
@using Sage.CA.SBS.ERP.Sage300.Common.Web.HtmlHelperExtension
@using Sage.CA.SBS.ERP.Sage300.Common.Models.Enums
@using AnnotationsResx = Sage.CA.SBS.ERP.Sage300.Common.Resources.AnnotationsResx

    <!-- Profile Tab -->
    <div class="sublevel-1" id="profile">
        <div class="form-group">
            @if (Model.Data.IsMultiCurrency)
            {
                <div class="search-group">
                    @Html.SageLabelFor(m => m.Data.TaxReportingCurrency)
                    @Html.KoSageTextBoxFor(m => m.Data.TaxReportingCurrency, new { @sagevalue = "Data.TaxReportingCurrency", @valueUpdate = "'input'" }, new { @id = "txtTaxReportingCurrency", @disable = false, @class = "smaller txt-upper" })
                    @Html.KoSageButton("btnLoadcurrency", null, new { @class = "icon btn-go", @id = "btnLoadcurrency", @tabindex = "-1" })
                    @Html.KoSageButton("btnCurrencyFinder", null, new { @class = "icon btn-search", @id = "btnCurrencyFinder", @tabindex = "-1" })
                    @Html.ValidationMessageFor(m => m.Data.TaxReportingCurrency)
                </div>
                <div class="input-group">
                    @Html.SageLabel("taxReportingCurrencydesc", TaxAuthoritiesResx.TaxReportingCurrencyDesc, null)
                    @Html.KoSageTextBox("txtTaxReportingCurrencydesc", new { @sagevalue = "CurrencyDescription" }, new { @disabled = "true", @class = "large" })
                </div>
            }
            <div class="input-group">
                @Html.SageLabelFor(m => m.Data.LastMaintained)
                @Html.KoSageTextBoxFor(m => m.Data.LastMaintained, new { @value = "LastMaintainedString" }, new { @disabled = true, @tabindex = "-1", @class = "default" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="dropdown-group">
                @Html.SageLabel("reportTaxRetainage", TaxAuthoritiesResx.ReportTaxonRetainageDocument, null)
                @Html.KoSageDropDownList("ddlreportTaxRetainage", new { @options = "ReportTaxonRetainageDocuments", @value = "Data.ReportTaxonRetainageDocument", @optionsText = "'Text'", @optionsValue = "'Value'" }, new { @id = "ddlreportTaxRetainage", @class = "medium" })
            </div>
            <div class="numeric-group">
                @Html.SageLabelFor(m => m.Data.MaximumTaxAllowable)
                @Html.KoSageTextBoxFor(m => m.Data.MaximumTaxAllowable, new { @sagevalue = "Data.MaximumTaxAllowable", @valueUpdate = "'input'" }, new { @id = "txtMaximumTaxAllowable", @class = "default align-right" })
            </div>
            <div class="numeric-group">
                @Html.SageLabelFor(m => m.Data.NoTaxChargedBelow)
                @Html.KoSageTextBoxFor(m => m.Data.NoTaxChargedBelow, new { @sagevalue = "Data.NoTaxChargedBelow", @valueUpdate = "'input'" }, new { @id = "txtNoTaxChargedBelow", @class = "default align-right" })
            </div>
        </div>
        <div class="form-group">
            <div class="dropdown-group">
                @Html.SageLabel("taxBase", TaxAuthoritiesResx.TaxBase, null)
                @Html.KoSageDropDownList("ddltaxBase", new { @options = "TaxBases", @value = "Data.TaxBase", @optionsText = "'Text'", @optionsValue = "'Value'" }, new { @id = "ddltaxBase", @class = "default" })
            </div>
            <div class="dropdown-group">
                @Html.SageLabel("reportLevel", TaxAuthoritiesResx.ReportLevel, null)
                @Html.KoSageDropDownList("ddlreportLevel", new { @options = "ReportLevels", @value = "Data.ReportLevel", @optionsText = "'Text'", @optionsValue = "'Value'" }, new { @id = "ddlreportLevel", @class = "default" })
            </div>
            <div class="ctrl-group no-label">
                <div class="child">
                    @Html.KoSageCheckBoxFor(m => m.Data.AllowTaxPrice, new { @sagechecked = "Data.AllowTaxPrice", @valueUpdate = "'input'" }, new { @id = "chkallowTax" })
                    @Html.SageLabel("chkallowTax", TaxAuthoritiesResx.AllowTaxInPrice, new { @class = "" })
                </div>
            </div>
        </div>

    </div>
