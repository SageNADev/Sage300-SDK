<!DOCTYPE html>
@{
    Page.Title = @CommonResx.Title;
}
@{
    var menuUrlList = ViewBag.MenuUrlList as List<WebModel.NavigableMenuViewModel<Sage.CA.SBS.ERP.Sage300.Common.Models.Portal.NavigableMenu>>;
