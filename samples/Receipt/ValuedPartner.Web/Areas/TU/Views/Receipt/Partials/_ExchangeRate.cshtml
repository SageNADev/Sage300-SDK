@model ValuedPartner.Web.Areas.TU.Models.ReceiptViewModel<ValuedPartner.TU.Models.ReceiptHeader>
@using Sage.CA.SBS.ERP.Sage300.Common.Web.HtmlHelperExtension
@using Sage.CA.SBS.ERP.Sage300.Common.Web.AreaConstants
@using CommonResx = Sage.CA.SBS.ERP.Sage300.Common.Resources.CommonResx
@using ReceiptResx = ValuedPartner.TU.Resources.Forms.ReceiptHeaderResx

<div id="exchangeRate"> 
            <hr />  
            <div class="form-group">
                <div class="input-group">
                    @Html.SageLabel("lblFunctionalCurrency", ReceiptResx.FunctionalCurrency)
                    @Html.KoSageTextBox("txtFunctionalCurrency", new { @value = "Data.HomeCurrency" }, new { @maxlength = "3", @disabled = "true", @tabindex = -1, @class = "txt-upper default" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    @Html.SageLabel("lblReceiptCurrency", ReceiptResx.ReceiptCurrency)
                    @Html.KoSageTextBox("txtReceiptCurrency", new { @value = "Data.ReceiptCurrency" }, new { @maxlength = "3", @disabled = "true", @tabindex = -1, @class = "txt-upper default" })
                </div>
            </div>
            <div class="form-group">
                <div class="datepicker-group">
                    @Html.SageLabel("lblRateDate", ReceiptResx.RateDate)
                    @Html.KoSageTextBoxFor(model => model.Data.RateDate, new { @sageDatePicker = "Data.RateDate" }, new { @disabled = "true",@tabindex = -1, @id = "txtRateDate", @class = "datepicker default" })
                </div>
            </div>
            <div class="form-group">
                <div class="search-group">
                    @Html.SageLabel("lblRateType", ReceiptResx.RateType)
                    @Html.KoSageTextBoxFor(model => model.Data.RateType, new { @sagevalue = "Data.RateType", @valueUpdate = "'input'", @sagedisable = "Data.disableExchangeRate" }, new { @maxlength = "2", @class = "txt-upper default", @formatTextbox = "alphaNumeric" })
                    @Html.KoSageButton("btnRateType", new { @value = "Data.RateType", @disable = "false" }, new
                        {
                            @id = "btnRateType",
                            @tabindex = -1,
                            @class = "icon btn-go"
                        })
                    @Html.KoSageButton("btnRateTypeFinder", new { @sagedisable = "Data.disableExchangeRate" }, new { @class = "icon btn-search", @id = "btnRateTypeFinder", @tabindex = -1 })
                </div>
            </div>
            <div class="form-group">
                <div class="numeric-search-group">
                    @Html.SageLabel("lblExchangeRate", ReceiptResx.ExchangeRate)
                    @Html.KoSageNumericBoxFor(model => model.Data.ExchangeRate, new { @sagevalue = "Data.ExchangeRate", @valueUpdate = "'input'", @sagedisable = "Data.disableExchangeRate" }, new { @id = "txtpopupExchangeRate", @maxlength = "15", @class = "default align-right kendonumeric" })
                    @Html.KoSageButton("btnExchangeRate", new { @value = "Data.ExchangeRate", @disable = "false" }, new
                        {
                            @id = "btnExchangeRate",
                            @tabindex = -1,
                            @class = "icon btn-go"
                        })
                    @Html.KoSageButton("btnExchangeRateFinder", new { @sagedisable = "Data.disableExchangeRate" }, new { @class = "icon btn-search", @id = "btnExchangeRateFinder", @tabindex = -1 })
                </div>
            </div>
        </div> 
