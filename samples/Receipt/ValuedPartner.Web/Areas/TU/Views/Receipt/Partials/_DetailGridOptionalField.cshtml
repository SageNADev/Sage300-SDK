@model ValuedPartner.TU.Models.ReceiptDetailOptionalField
@using Sage.CA.SBS.ERP.Sage300.Common.Web.HtmlHelperExtension
@using Sage.CA.SBS.ERP.Sage300.Common.Web.AreaConstants
@using CommonResx = Sage.CA.SBS.ERP.Sage300.Common.Resources.CommonResx

@using Sage.CA.SBS.ERP.Sage300.Common.Models
@using Sage.CA.SBS.ERP.Sage300.Common.Models.Enums
@using ValuedPartner.TU.Models

<div id="windowmessage"></div>
<hr />
<div id="detailOptionalField">
    @{
        UserAccess DetailOptionalAccess = new UserAccess();
        ViewBag.UserAccess.ResourceSecurity.TryGetValue(ReceiptDetailOptionalField.EntityName, out DetailOptionalAccess);
        bool validateOptionalAccess = DetailOptionalAccess.SecurityType.HasFlag(SecurityType.Modify);
    }
    <div class="gridcontrols-group clearfix">

        @if (DetailOptionalAccess.SecurityType.HasFlag(SecurityType.Add))
        {
            @Html.SageButtonNoName(CommonResx.AddLine, new { @id = "btnAddOptionalFieldLine1", @class = "btn btn-default btn-grid-control btn-add" })
        }
        @if (DetailOptionalAccess.SecurityType.HasFlag(SecurityType.Delete))
        {
            @Html.SageButtonNoName(CommonResx.DeleteLine, new { @id = "btnDeleteOptionalFieldLine1", @class = "btn btn-default btn-grid-control btn-delete" })
        }

    </div>
    <div class="datagrid-group">
        @Html.Partial(Core.OptionalFields)
        @Html.KoKendoGrid("DetailOptionalFieldGrid", "receiptUI.receiptModel.Data.ReceiptDetailOptionalField.Items", "DisplayIndex", "optionalFieldUIGrid.optionalFieldConfig('TU','Receipt','GetDetailOptFields', 'DetailOptionalFieldGrid', 0, 0, 1, 'ReceiptDetailOptionalField',null,true,true)", true)
    </div>
</div>




