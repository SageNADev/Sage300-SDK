@model  ValuedParter.TU.Models.ReceiptDetail

@using Sage.CA.SBS.ERP.Sage300.Common.Web.AreaConstants
@using Sage.CA.SBS.ERP.Sage300.Common.Web.HtmlHelperExtension
@using CommonResx = Sage.CA.SBS.ERP.Sage300.Common.Resources.CommonResx


<script>
    var receiptDetailFields = {
        txtOptionalFieldString: '<div class="edit-container"><div class="wrapper"> <div class="edit-cell inpt-text">@Html.SageTextBoxFor(model => model.OptionalFieldString, new { @id = "txtOptionalFieldString", @class = "grid_inpt", @maxlength = "45", @disabled = true })</div>',
