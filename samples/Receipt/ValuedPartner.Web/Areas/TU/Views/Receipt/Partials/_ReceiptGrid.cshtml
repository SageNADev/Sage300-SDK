    @Html.SageButtonNoName(CommonResx.AddLine, new { @id = "btnDetailAddLine", @class = "btn btn-default btn-grid-control btn-add" })
    @Html.SageButtonNoName(CommonResx.DeleteLine, new { @id = "btnDetailDeleteLine", @class = "btn btn-default btn-grid-control btn-delete" })
    @Html.SageButtonNoName(CommonResx.EditColumns, new { @id = "btnDetailEditColumns", @class = "btn btn-default btn-grid-control btn-edit-column" })
    @Html.KoSageButton("btnManufacturerItemFinder", new { @sagevisible = "false" }, new { @id = "btnManufacturerItemFinder", @class = "icon btn-finder", @tabindex = "-1", @disabled = "disabled" })
</div>
<div class="datagrid-group">
    @Html.Partial(Core.GridPreferences)
    @Html.KoKendoGrid("ReceiptGrid", "receiptUI.receiptModel.Data.ReceiptDetail.Items", "DisplayIndex", "receiptGrid.config", true)
</div>

